#include <stdio.h>

int main(void) {
    int n;
    printf("Fatorial de qual numero ? \n");
    scanf("%d", &n);
    int fatorial = 1;
    for (int i=n; i>=1; i--) {
        fatorial *= i;
        i == 1? printf("%d = ", i) : printf("%d X ", i);
    }
    printf(" %d \n", fatorial);
    
    return 0;
}
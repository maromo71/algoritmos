#include <stdio.h>

int main(void) {
    double cotacao, valor;
    printf("Digite a cotacao do dolar: \n");
    scanf("%lf", &cotacao);
    printf("Digite o valor em dolares: \n");
    scanf("%lf", &valor);
    double reais = cotacao * valor;
    printf("O valor em Reais e %.2lf \n", reais);

    return 0;
}
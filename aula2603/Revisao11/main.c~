#include <stdio.h>

int main(void) {
    double preco;
    printf("Digite o valor do produto\n");
    scanf("%lf", &preco);
    int condicao;
    printf("Digite a condicao do produto [1..4]\n");
    scanf("%d", &condicao);
    switch (condicao) {
        case 1:
            printf("A Vista em dinheiro ou cheque\n");
            preco *= 0.9;
            break;
        case 2:
            printf("A Vista com cartao de credito\n");
            preco*=0.95;
            break;
        case 3:
            printf("Em dias vezes, preco normal\n");
            break;
        case 4:
            
    }
    return 0;
}
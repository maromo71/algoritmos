#include <stdio.h>

int main(void) {
    char letra;
    printf("Digite uma letra: \n");
    letra = getchar(); //ler uma unica letra use o getchar()
    printf("Letra: %c \n", letra);
    if (letra=='a' || letra=='e' || letra=='i' || letra=='o' || letra=='u') {
        printf("Vogal\n");
    }else {
        printf("Nao vogal\n");
    }
    return 0;
}